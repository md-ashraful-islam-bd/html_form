    <script>
        // Navigation for cards
        document.getElementById('nextButton43').addEventListener('click', () => {
            if (document.getElementById('radioButtonYes43').checked || document.getElementById('radioButtonNo43').checked) {
                document.getElementById('card43').style.display = 'none';
                document.getElementById('card44').style.display = 'block';
            }
        });

        document.getElementById('prevButton44').addEventListener('click', () => {
            document.getElementById('card44').style.display = 'none';
            document.getElementById('card43').style.display = 'block';
        });

        document.getElementById('nextButton44').addEventListener('click', () => {
            if (document.getElementById('radioButtonYes44').checked || document.getElementById('radioButtonNo44').checked) {
                document.getElementById('card44').style.display = 'none';
                document.getElementById('card45').style.display = 'block';
            }
        });

        // Add similar navigation logic for other cards
        // Example for conditional logic:
        document.getElementById('nextButton46').addEventListener('click', () => {
            if (document.querySelector('input[name="CARD46"][value="Yes"]').checked) {
                document.getElementById('card46').style.display = 'none';
                document.getElementById('card47').style.display = 'block';
            } else if (document.querySelector('input[name="CARD46"][value="No"]').checked) {
                document.getElementById('card46').style.display = 'none';
                document.getElementById('card48').style.display = 'block';
            } else {
                alert('অনুগ্রহ করে একটি বিকল্প নির্বাচন করুন'); // Bangla text for "Please select an option"
            }
        });

        // Handling form submission
        document.getElementById('submitButton').addEventListener('click', () => {
            document.getElementById('cardsubmit').style.display = 'none';
            document.getElementById('card80').style.display = 'block';
            document.getElementById('form').submit();
        });

        document.getElementById('form').addEventListener('submit', e => {
            e.preventDefault();
            fetch('https://script.google.com/macros/s/AKfycbxf-dUwbPuzzGU0hyY4RHJQIg9bGgfxlrsAW2pCMrzAQ-cuqxQ8i_VdwbM2sA7QQ5RzVQ/exec', {
                method: 'POST',
                body: new FormData(document.getElementById('form'))
            })
            .then(response => alert("আপনার প্রতিক্রিয়া গ্রহণ করা হয়েছে!")) // Bangla text for "Your response has been received!"
            .catch(error => console.error('Error!', error.message));
        });
    </script>
